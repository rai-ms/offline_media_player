<?xml version="1.0" encoding="utf-8"?>
<!--
    PlayerView for offline HLS playback

    NOTE: Using texture_view for Flutter PlatformView compatibility.
    SurfaceView doesn't work properly with Flutter Hybrid Composition
    because the surface is never created/attached properly.

    For DRM content, we would need SurfaceView, but that requires
    a different integration approach (e.g., separate Activity or
    using Flutter's Texture widget with custom video rendering).
-->
<androidx.media3.ui.PlayerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offline_player_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true"
    app:surface_type="texture_view"
    app:use_controller="false"
    app:show_buffering="when_playing"
    app:resize_mode="fit"
    app:shutter_background_color="@android:color/black" />
