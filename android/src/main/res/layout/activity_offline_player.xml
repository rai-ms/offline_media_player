<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- ExoPlayer PlayerView with SurfaceView for DRM support -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:surface_type="surface_view"
        app:use_controller="false"
        app:show_buffering="never"
        app:resize_mode="fit"
        app:shutter_background_color="@android:color/black" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:indeterminate="true" />

    <!-- Custom Controls Overlay -->
    <RelativeLayout
        android:id="@+id/controls_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000">

        <!-- Top bar with back button and title -->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:background="@drawable/gradient_top">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_back"
                android:scaleType="centerInside"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Center playback controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Rewind 10s -->
            <ImageButton
                android:id="@+id/btn_rewind"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Rewind 10 seconds"
                android:src="@drawable/ic_rewind_10"
                android:scaleType="centerInside"
                android:padding="16dp" />

            <!-- Play/Pause -->
            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play/Pause"
                android:src="@drawable/ic_pause"
                android:scaleType="centerInside"
                android:padding="16dp" />

            <!-- Forward 10s -->
            <ImageButton
                android:id="@+id/btn_forward"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Forward 10 seconds"
                android:src="@drawable/ic_forward_10"
                android:scaleType="centerInside"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Bottom bar with seek bar and time -->
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <!-- Current position -->
            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- Seek bar -->
            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:max="1000"
                android:progress="0"
                android:progressTint="@color/primary_color"
                android:thumbTint="@color/primary_color" />

            <!-- Duration -->
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
